<%= simple_form_for [ @restaurant] do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.select :category, ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.submit "Add a new Restaurant", class: "btn btn-primary" %>
<% end %>

<%= link_to 'Cancel', :back %> 